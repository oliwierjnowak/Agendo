@page "/employees"
@using Agendo.Server.Models;
@using Agendo.Shared
@using System.Security.Claims;
@inject HttpClient Http
@inject AuthenticationStateProvider AuthStateProvider
<PageTitle>Employees</PageTitle>

<h1>Employees</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (employees == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in employees)
            {
                <tr>
                    <td>@employee.Nr</td>
                    <td>@employee.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private IEnumerable<DomainDTO>? employees;

    protected override async Task OnInitializedAsync()
    {
        var authstate = await AuthStateProvider.GetAuthenticationStateAsync();
        var sup = authstate.User.Claims.FirstOrDefault(claim => claim.Type == ClaimTypes.Actor).Value;
        employees = await Http.GetFromJsonAsync<IEnumerable<DomainDTO>>("api/domain?superior=" + sup);
        
    }
}
